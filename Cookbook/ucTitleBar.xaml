<UserControl x:Class="Cookbook.ucTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Label Name="lblTitle" Background="{StaticResource DefaultBackground}"  VerticalAlignment="Top" Height="50"
               Content="Cookbook" Foreground="Gray" VerticalContentAlignment="Center" Padding="20, 0, 0, 0" FontSize="18"/>
        <Label Name="btnClose" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="50"
               Content="X" Foreground="Gray" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               MouseEnter="btnClose_MouseEnter" MouseLeave="btnClose_MouseLeave" MouseUp="btnClose_MouseUp"/>
    </Grid>
</UserControl>
